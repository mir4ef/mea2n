{
  "fileExtensions": [".less"],
  "excludedFiles": [],
  "attributeQuotes": true,
  "comment": {
    "enabled": true
  },
  "decimalZero": {
    "enabled": true,
    "style": "none"
  },
  "depthLevel": {
    "enabled": true,
    "depth": 4
  },
  "duplicateProperty": {
    "enabled": true,
    "exclude": [
      "background",
      "background-color"
    ]
  },
  "emptyRule": true,
  "finalNewline": true,
  "hexLength": {
    "enabled": true,
    "style": "long"
  },
  "hexNotation": {
    "enabled": true,
    "style": "lowercase"
  },
  "hexValidation": true,
  "idSelector": {
    "enabled": false,
    "exclude": []
  },
  "importantRule": true,
  "maxCharPerLine": {
    "enabled": true,
    "limit": 300
  },
  "newlineAfterBlock": true,
  "propertyOrdering": {
    "enabled": true,
    "style": "alpha"
  },
  "qualifyingElement": {
    "allowWithAttribute": true,
    "allowWithClass": false,
    "allowWithId": false
  },
  "selectorNaming": {
    "disallowUppercase": true,
    "disallowUnderscore": true,
    "disallowDash": false,
    "exclude": []
  },
  "singleLinePerProperty": {
    "allowSingleLineRules": true
  },
  "spaceAfterPropertyColon": {
    "enabled": true,
    "style": "one_space"
  },
  "spaceAfterPropertyName": {
    "enabled": true,
    "style": "no_space"
  },
  "spaceAfterPropertyValue": {
    "enabled": true,
    "style": "no_space"
  },
  "spaceAroundComma": {
    "enabled": true,
    "allowNewline": false,
    "style": "after"
  },
  "spaceAroundOperator": {
    "enabled": true,
    "style": "both"
  },
  "spaceBeforeBrace": {
    "enabled": true,
    "style": "one_space"
  },
  "spaceBetweenParens": {
    "enabled": true,
    "style": "no_space"
  },
  "stringQuotes": {
    "enabled": true,
    "style": "single"
  },
  "trailingSemicolon": true,
  "trailingWhitespace": true,
  "urlFormat": {
    "enabled": true,
    "style": "relative"
  },
  "universalSelector": true,
  "urlQuotes": true,
  "zeroUnit": {
    "enabled": true,
    "style": "no_unit"
  }
}

{
  "name": "mea2n",
  "description": "(M)EAN Stack with Angular 2+ Starter",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "author": "My Name <my@email.com>",
  "homepage": "https://example.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/mir4ef/mea2n.git"
  },
  "bugs": {
    "url": "https://github.com/mir4ef/mea2n/issues"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "main": "server.js",
  "directories": {
    "app": "src",
    "node": "server"
  },
  "scripts": {
    "ng": "ng",
    "start": "npm run docs:api && npm run docs:app && ng serve",
    "build": "npm run docs:api && npm run docs:app && ng build",
    "build:prod": "npm run docs:api && npm run docs:app && npm run lint && npm run test:once -- --code-coverage && ng build --prod --aot",
    "build:watch": "ng build -w",
    "test": "ng test",
    "test:once": "ng test --single-run",
    "lint": "npm run lint:css && npm run lint:html && npm run lint:node && npm run lint:ts",
    "lint:css": "./node_modules/lesshint/bin/lesshint ./src/",
    "lint:html": "./node_modules/htmlhint-ng2/bin/htmlhint --rulesdir ./custom-rules/ ./src/app/ ./src/index.html",
    "lint:node": "./node_modules/.bin/eslint ./server cluster.js server.js",
    "lint:ts": "ng lint",
    "e2e": "ng e2e",
    "docs:app": "./node_modules/typedoc/bin/typedoc --out ./src/documentation/app/ --mode file --module \"node\" --target \"ES5\" ./src/app/",
    "docs:api": "./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js ./server/routes/v1/**/* -d ./server/swagger.def.js -o ./src/documentation/api/swagger.json",
    "docs:api:watch": "./node_modules/swagger-jsdoc/bin/swagger-jsdoc.js ./server/routes/v1/**/* -d ./server/swagger.def.js -o ./src/documentation/api/swagger.json -w"
  },
  "pre-commit": [
    "lint",
    "test:once",
    "e2e"
  ],
  "dependencies": {
    "@angular/common": "~4.0.0",
    "@angular/compiler": "~4.0.0",
    "@angular/core": "~4.0.0",
    "@angular/forms": "~4.0.0",
    "@angular/http": "~4.0.0",
    "@angular/platform-browser": "~4.0.0",
    "@angular/platform-browser-dynamic": "~4.0.0",
    "@angular/router": "~4.0.0",
    "body-parser": "^1.17.0",
    "chalk": "^1.1.3",
    "compression": "^1.6.0",
    "core-js": "^2.4.1",
    "express": "^4.15.0",
    "express-rate-limit": "^2.6.0",
    "helmet": "^3.5.0",
    "morgan": "^1.8.0",
    "rxjs": "^5.1.0",
    "spdy": "^3.4.0",
    "zone.js": "^0.8.5"
  },
  "devDependencies": {
    "@angular/cli": "~1.0.0",
    "@angular/compiler-cli": "~4.0.0",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "codelyzer": "~2.0.0",
    "eslint": "^3.18.0",
    "htmlhint-ng2": "0.0.13",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.5.0",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "~1.0.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lesshint": "^3.1.0",
    "pre-commit": "^1.2.2",
    "protractor": "~5.1.0",
    "swagger-jsdoc": "^1.9.2",
    "ts-node": "~3.0.2",
    "tslint": "~4.5.1",
    "typedoc": "^0.5.9",
    "typescript": "~2.2.0"
  }
}
